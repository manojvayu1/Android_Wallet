<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_list_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_color_shape"
    android:elevation="10dp"
    android:orientation="vertical"
    app:stackHeaderHeight="130dp">

    <FrameLayout
        android:id="@+id/frame_list_card_item"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:background="@drawable/pan_shape_border">

        <ImageView
            android:id="@+id/pan_header"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/pan_file3" />

        <RelativeLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="90dp">

            <TextView
                android:id="@+id/tv_pan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="12dp"
                android:text="PAN NAME"
                android:textAlignment="center" />


            <ImageView
                android:id="@+id/pan_file2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/pan_file4"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp" />


            <ImageView
                android:id="@+id/pan_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/border_color_aadhar"
                android:layout_alignTop="@+id/tv_pan_num"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp" />

            <TextView
                android:id="@+id/tv_pan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Card number"
                android:layout_margin="16dp"
                android:padding="12dp"
                android:layout_below="@+id/pan_file2"
                android:layout_marginStart="16dp" />


        </RelativeLayout>


    </FrameLayout>
</LinearLayout>